{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run-script", "test-debug"
            ],
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform env",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                "env"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform init (no args)",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                "init"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform init testDir",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                "-v",
                "init",
                "testDir"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform (no args)",
            "program": "${workspaceRoot}/bin/hexix-platform"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform versions",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "-v",
                  "versions"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform build-dev",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "build-dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform up",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "up"
            ]
        }

    ]
}
