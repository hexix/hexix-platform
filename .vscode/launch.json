    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform versions",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "-v",
                  "versions"
            ],
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform build-dev",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "build-dev"
            ],
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hexix-platform up",
            "program": "${workspaceRoot}/bin/hexix-platform",
            "args": [
                  "up"
            ],
            "console": "internalConsole"
        }

    ]
